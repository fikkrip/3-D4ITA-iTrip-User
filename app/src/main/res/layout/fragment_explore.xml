<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ppl.fikkrip.itrip.ExploreFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/sumatra"
        android:id="@+id/imageSumatra"
        android:layout_below="@+id/appBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/papua"
        android:id="@+id/imagePapua"
        android:layout_alignBottom="@+id/imageSumatra"
        android:layout_toRightOf="@+id/imageSulawesi"
        android:layout_toEndOf="@+id/imageSulawesi" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/kalimantan"
        android:id="@+id/imageKalimantan"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/appBar"
        android:layout_toRightOf="@+id/imageSumatra"
        android:layout_toEndOf="@+id/imageSumatra" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/sulawesi"
        android:id="@+id/imageSulawesi"
        android:layout_alignTop="@+id/imageSumatra"
        android:layout_toRightOf="@+id/imageKalimantan"
        android:layout_toEndOf="@+id/imageKalimantan" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/jawa"
        android:id="@+id/imageJawa"
        android:layout_below="@+id/imageKalimantan"
        android:layout_toRightOf="@+id/imageSumatra"
        android:layout_toEndOf="@+id/imageSumatra" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:layout_marginTop="200dp"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#edf1f2"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvhape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:background="#edf1f2"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:drawablePadding="2dp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:text="Click The Island for Details!"
        android:drawableLeft="@drawable/ic_alert"
        android:gravity="center_vertical"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/imageJawa"
        android:layout_toRightOf="@+id/imageKalimantan"
        android:layout_toEndOf="@+id/imageKalimantan" />

</RelativeLayout>
