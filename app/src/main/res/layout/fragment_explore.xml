<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ppl.fikkrip.itrip.ExploreFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginBottom="20dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:text="@string/explore"
                android:textSize="25sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_gravity="start"/>

            <ImageButton
                android:id="@+id/notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notifications"
                android:background="@color/colorPrimary"
                android:paddingRight="10dp"
                android:layout_gravity="end"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/sumatra"
        android:id="@+id/imageSumatra"
        android:layout_below="@+id/appBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/papua"
        android:id="@+id/imagePapua"
        android:layout_alignBottom="@+id/imageSumatra"
        android:layout_toRightOf="@+id/imageSulawesi"
        android:layout_toEndOf="@+id/imageSulawesi" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/kalimantan"
        android:id="@+id/imageKalimantan"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/appBar"
        android:layout_toRightOf="@+id/imageSumatra"
        android:layout_toEndOf="@+id/imageSumatra" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/sulawesi"
        android:id="@+id/imageSulawesi"
        android:layout_alignTop="@+id/imageSumatra"
        android:layout_toRightOf="@+id/imageKalimantan"
        android:layout_toEndOf="@+id/imageKalimantan" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/jawa"
        android:id="@+id/imageJawa"
        android:layout_below="@+id/imageKalimantan"
        android:layout_toRightOf="@+id/imageSumatra"
        android:layout_toEndOf="@+id/imageSumatra" />

