<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ppl.fikkrip.itrip.controller.activity.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logotrip"
                android:background="@color/colorPrimary"
                android:paddingRight="10dp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:text="@string/itrip"
                android:textSize="25sp"
                android:textColor="#FFF"
                android:layout_gravity="start"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/Widget.Design.BottomNavigationView"
        app:tabIndicatorColor="@color/colorPrimary"
        android:background="@color/colorPrimary">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab_explore"
            android:icon="@drawable/ic_home" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab_mytrip"
            android:text=""
            android:icon="@drawable/ic_mytrip"/>

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab_favorit"
            android:text=""
            android:icon="@drawable/ic_favorit"/>

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab_nearme"
            android:text=""
            android:icon="@drawable/ic_nearme"/>

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tab_account"
            android:text=""
            android:icon="@drawable/ic_account"/>

    </android.support.design.widget.TabLayout>
    <ScrollView
        android:id="@+id/sv_main"
        android:layout_below="@id/appBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tl_main"/>

    <com.ppl.fikkrip.itrip.controller.adapter.CustomViewPager
        android:id="@+id/vp_main"
        android:layout_below="@id/appBar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_above="@id/tl_main"/>

</RelativeLayout>
